-- Create a ScreenGui for the GUI
local gui = Instance.new("ScreenGui")
gui.Name = "FlyMobileGUI"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame for the draggable GUI
local frame = Instance.new("Frame")
frame.Name = "DraggableFrame"
frame.Size = UDim2.new(0, 200, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
frame.Position = UDim2.new(0, 50, 0, 50)
frame.Draggable = true
frame.Active = true
frame.Parent = gui

-- Create a TextButton for toggling fly mode
local flyButton = Instance.new("TextButton")
flyButton.Parent = frame
flyButton.Text = "Fly Mode: OFF"
flyButton.Size = UDim2.new(1, 0, 0.5, 0)
flyButton.Position = UDim2.new(0, 0, 0, 0)

-- Create a TextButton for toggling speed
local speedButton = Instance.new("TextButton")
speedButton.Parent = frame
speedButton.Text = "Speed: 1x"
speedButton.Size = UDim2.new(1, 0, 0.5, 0)
speedButton.Position = UDim2.new(0, 0, 0.5, 0)

-- Create a TextButton to toggle GUI visibility
local toggleButton = Instance.new("TextButton")
toggleButton.Parent = gui
toggleButton.Text = "Hide GUI"
toggleButton.Size = UDim2.new(0, 100, 0, 30)
toggleButton.Position = UDim2.new(0.5, -50, 0.95, 0)

local guiVisible = true

-- Notification function by AndrheyPlayz_OfficialYT
local function notify(message)
    -- Adjust the notification style here
    print("Notification: "AndrheyPlayz_Off .. message)
end

-- Function to toggle fly mode
local function toggleFlyMode()
    -- Your fly mode logic here
end

-- Function to toggle speed
local function toggleSpeed()
    -- Your speed toggle logic here
end

-- Function to toggle GUI visibility
local function toggleGUIVisibility()
    guiVisible = not guiVisible
    frame.Visible = guiVisible
    if guiVisible then
        toggleButton.Text = "Hide GUI"
    else
        toggleButton.Text = "Show GUI"
    end
end

-- Connect button click events to functions
flyButton.MouseButton1Click:Connect(toggleFlyMode)
speedButton.MouseButton1Click:Connect(toggleSpeed)
toggleButton.MouseButton1Click:Connect(toggleGUIVisibility)

-- Notify message by AndrheyPlayz_OfficialYT
notify("Welcome to the Fly Mobile Script!")  -- Example notification message
