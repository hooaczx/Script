local ReverbModeframe = Instance.new("Frame", scrollingsettingmusicFrame)
ReverbModeframe.Size = UDim2.new(1, 0, 0, 100)
ReverbModeframe.BackgroundColor3 = Configs_HUB.Cor_Hub
ReverbModeframe.BackgroundTransparency = 0

local TextReverbMode = Instance.new("TextLabel", ReverbModeframe)
TextReverbMode.Size = UDim2.new(1, 0, 0, 30)
TextReverbMode.TextScaled = true
TextReverbMode.TextXAlignment = Enum.TextXAlignment.Left
TextReverbMode.BackgroundTransparency = 1
TextReverbMode.TextColor3 = Color3.fromRGB(255, 255, 255)
TextReverbMode.Text = "Reverb Effect"

local TextReverbMode1 = Instance.new("TextLabel", ReverbModeframe)
TextReverbMode1.Size = UDim2.new(1, 0, 0, 50)
TextReverbMode1.TextScaled = true
TextReverbMode1.TextXAlignment = Enum.TextXAlignment.Left
TextReverbMode1.BackgroundTransparency = 1
TextReverbMode1.Position = UDim2.new(0, 0, 0.31, 0)
TextReverbMode1.TextColor3 = Color3.fromRGB(255, 255, 255)
TextReverbMode1.Text = [[Makes sound sound like it echoes in an enclosed space, such as a large room or cave. The sound will echo and linger longer after stopping]]

local echoButton = Instance.new("TextButton", ReverbModeframe)
echoButton.Size = UDim2.new(0, 100, 0, 30)
echoButton.Position = UDim2.new(0.82, 0, 0.75, 0)
echoButton.Text = "Reverb Mode: Room"
echoButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
echoButton.TextColor3 = Color3.fromRGB(255, 255, 255)
echoButton.TextScaled = true
echoButton.BackgroundTransparency = 0.4

local reverbEffect = Instance.new("ReverbSoundEffect", soundmusic)

local modes = {
    { name = "Off", decayTime = 0, density = 0 },
    { name = "Room", decayTime = 0.3, density = 0.5 },
    { name = "Hall", decayTime = 1.2, density = 0.8 },
    { name = "Concert Hall", decayTime = 2.5, density = 1.0 },
    { name = "Forest", decayTime = 0.7, density = 0.4 },
    { name = "Tunnel", decayTime = 1.5, density = 0.75 },
    { name = "Mountains", decayTime = 3.5, density = 0.85 },
    { name = "Cave", decayTime = 3.0, density = 0.7 },
    { name = "Arena", decayTime = 1.8, density = 0.9 },
    { name = "Underwater", decayTime = 2.2, density = 0.6 },
    { name = "Open Field", decayTime = 0.5, density = 0.3 },
    { name = "City", decayTime = 1.0, density = 0.65 },
    { name = "Desert", decayTime = 0.9, density = 0.5 },
    { name = "Snowy Mountain", decayTime = 2.0, density = 0.4 },
    { name = "Abandoned Building", decayTime = 1.3, density = 0.7 },
    { name = "Swamp", decayTime = 1.7, density = 0.6 },
    { name = "Factory", decayTime = 1.6, density = 0.75 },
    { name = "Waterfall", decayTime = 2.3, density = 0.8 },
    { name = "Cathedral", decayTime = 3.0, density = 0.9 },
    { name = "Subway", decayTime = 1.4, density = 0.7 },
    { name = "Library", decayTime = 1.1, density = 0.5 },
}

local currentMode = 1

echoButton.MouseButton1Click:Connect(function()
    currentMode = currentMode % #modes + 1
    local mode = modes[currentMode]
    echoButton.Text = "Reverb Mode: " .. mode.name
    reverbEffect.DecayTime = mode.decayTime
    reverbEffect.Density = mode.density
    reverbEffect.Enabled = mode.name ~= "Off"
end)
