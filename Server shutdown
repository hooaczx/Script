c = Instance.new("Hint")  --SHUT IT DOWN NO NAMES NEEDED just run it
c.Text = "SERVER SHUTDOWN BECAUSE OF ABUSERS WHO ABUSED THIS PLACE!"
c.Parent = game.Workspace 
text = {"SERVER IS ABOUT TO SHUTDOWN. PLEASE WAIT!", "", "", ""} 
while wait(5) do 
if not game.Players:FindFirstChild("NAME") then 
local m = Instance.new("Message") m.Parent = Workspace 
for i,v in pairs(text) do 
m.Text = v 
wait(2) 
m:Remove() 
end 
for i,v in pairs(game.Players:GetChildren()) do 
v:Remove() 
end 
end 
end
