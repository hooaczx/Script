local playery = game.Players.LocalPlayer
local cam = workspace.CurrentCamera
local tweenservice = game:GetService("TweenService")

local orgmz = playery.CameraMaxZoomDistance
local orgmnz = playery.CameraMinZoomDistance

local rizzsound = Instance.new("Sound", playery:WaitForChild("PlayerScripts"))
rizzsound.SoundId = "rbxassetid://" .. soundid
rizzsound.Volume = 1

local skibidiblur = Instance.new("BlurEffect", cam)
skibidiblur.Size = 0

local sigmaeffect = Instance.new("ColorCorrectionEffect", cam)
sigmaeffect.TintColor = Color3.new(1, 1, 1)
sigmaeffect.Saturation = 0

local overlay = Instance.new("Frame")
overlay.Size = UDim2.new(1, 0, 1, 0)
overlay.Position = UDim2.new(0, 0, 0, 0)
overlay.BackgroundColor3 = Color3.new(0, 0, 0)
overlay.BackgroundTransparency = 1
overlay.Visible = true
overlay.Parent = playery:WaitForChild("PlayerGui")

local function applyHitEffect()
    if not effectEnabled then return end

    rizzsound:Play()
    wait(0.1)

    tweenservice:Create(skibidiblur, TweenInfo.new(0.5), {Size = 24}):Play()
    wait(0.5)

    local function fadecolor()
        tweenservice:Create(sigmaeffect, TweenInfo.new(0.5), {TintColor = Color3.new(1, 0, 0), Saturation = -1}):Play()
        wait(0.5)
        tweenservice:Create(sigmaeffect, TweenInfo.new(0.5), {TintColor = Color3.new(1, 1, 1), Saturation = 0}):Play()
        wait(0.5)
    end

    local shakeidk

    local function shakecamera()
        local rs = game:GetService("RunService")

        shakeidk = rs.RenderStepped:Connect(function()
            local ct = tick()
            local bobblex = math.cos(ct * 10) * 1
            local bobbley = math.abs(math.sin(ct * 10)) * 1
            local bobble = Vector3.new(bobblex, bobbley, 0)
            cam.CFrame = cam.CFrame * CFrame.new(bobble)
        end)
    end

    shakecamera()
    
    local cameraTweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.Out)
    local targetCFrame = cam.CFrame * CFrame.new(0, 0, -5)
    local cameraTween = tweenservice:Create(cam, cameraTweenInfo, {CFrame = targetCFrame})
    cameraTween:Play()

    local elapsedtime = 0
    while elapsedtime < 1.5 do
        fadecolor()
        elapsedtime = elapsedtime + 1
    end

    if shakeidk then
        shakeidk:Disconnect()
    end

    tweenservice:Create(skibidiblur, TweenInfo.new(0.5), {Size = 0}):Play()
    wait(0.5)

    local returnTween = tweenservice:Create(cam, cameraTweenInfo, {CFrame = cam.CFrame * CFrame.new(0, 0, 5)})
    returnTween:Play()
    
    wait(returnTween.Completed)

    playery.CameraMaxZoomDistance = orgmz
    playery.CameraMinZoomDistance = orgmnz
end

local effectEnabled = false

local function connectHealthChanged(humanoid)
    humanoid.HealthChanged:Connect(function(newHealth)
        if effectEnabled and newHealth < humanoid.MaxHealth then
            applyHitEffect()
        end
    end)
end

local function onCharacterAdded(character)
    local humanoid = character:WaitForChild("Humanoid")
    connectHealthChanged(humanoid)
end

if playery.Character then
    onCharacterAdded(playery.Character)
end

playery.CharacterAdded:Connect(onCharacterAdded)

AddToggle(Main5u6, {
    Name = "Hit Effect",
    Default = false,
    Callback = function(value) 
        effectEnabled = value
    end
})
